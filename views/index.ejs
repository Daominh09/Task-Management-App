<%- include('partials/header') %>

<div class="flex-container">
  <div class="box">
    <h1><%= weekDay %>, <%= month %> <%= day %></h1>
  </div>

  <div class="work">
    <% todayTasks.forEach((task, idx) => { %>
      <div class="workLi <%= task.completed ? 'completed' : '' %>">
        <form action="/toggleToday" method="POST">
          <input type="hidden" name="index" value="<%= idx %>">
          <input
            type="checkbox"
            id="today-<%= idx %>"
            <%= task.completed ? 'checked' : '' %>
            onchange="this.form.submit()"
          >
          <label for="today-<%= idx %>"><%= task.text %></label>
        </form>
      </div>
    <% }); %>
  </div>

  <form action="/submit" method="POST" class="input-form">
    <input type="text" name="newTask" placeholder="New Item" required>
    <button type="submit">+</button>
  </form>
</div>

<%- include('partials/footer') %>